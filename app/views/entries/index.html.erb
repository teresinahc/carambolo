<p id="notice"><%= notice %></p>

<h1><%= t(:entry, scope: 'activerecord.models').pluralize %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(:feeling, scope: 'activerecord.attributes.entries') %></th>
      <th><%= t(:description, scope: 'activerecord.attributes.entries') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= t(entry.feeling, scope: 'activerecord.attributes.entries.feelings') %></td>
        <td><%= entry.description %></td>
        <td><%= link_to t(:show), entry %></td>
        <td><%= link_to t(:edit), edit_entry_path(entry) %></td>
        <td><%= link_to t(:delete), entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t(:create)} #{t(:entry, scope: 'activerecord.models')}", new_entry_path %>
